{
  "name": "medistock-cloud-functions",
  "version": "1.0.0",
  "description": "Cloud Functions pour validation côté serveur MediStock",
  "main": "functions/index.js",
  "scripts": {
    "lint": "eslint functions/",
    "lint:fix": "eslint functions/ --fix",
    "serve": "firebase emulators:start --only functions,firestore",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions,firestore:rules",
    "logs": "firebase functions:log",
    "test": "mocha test/*.test.js --timeout 10000"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "eslint": "^8.53.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.2.0"
  },
  "private": true
}